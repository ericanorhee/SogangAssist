<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/entire_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_border_widget"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/box_data"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/btn_prev"
        android:layout_toStartOf="@id/btn_next">

        <TextView
            android:id="@+id/tv_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/tv_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/tv_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_prev"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_chevron_left"
        android:tint="@android:color/white"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/usual_margin"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/box_data"
        android:layout_alignBottom="@id/box_data" />

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_chevron_right"
        android:tint="@android:color/white"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/usual_margin"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/box_data"
        android:layout_alignBottom="@id/box_data" />

    <ImageView
        android:id="@+id/background_logo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_icon"
        android:tint="@android:color/white"
        android:alpha="0.15"
        android:layout_marginStart="-60dp"
        android:layout_marginTop="-60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
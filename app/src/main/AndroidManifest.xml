<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="net.ienlab.sogangassist">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/real_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:label">

        <receiver
            android:name=".TimeReceiver"
            android:enabled="true"
            android:exported="true">

        </receiver>

        <receiver
            android:name=".MarkFinishReceiver"
            android:enabled="true"
            android:exported="true">

        </receiver>

        <receiver
            android:name=".BootDeviceReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".EditActivity"
            android:label="@string/edit_detail"
            android:theme="@style/AppTheme.ActionBar">

        </activity>
        <activity android:name=".SettingsActivity"
            android:theme="@style/AppTheme.Settings"/>

        <activity android:name=".MainActivity" />
        <activity android:name=".OnboardingActivity" />

        <service
            android:name=".LMSListenerService"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8050897224557020~5997367915" />
    </application>

</manifest>